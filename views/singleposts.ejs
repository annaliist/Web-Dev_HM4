<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Single Post</title>
</head>

<body>
    <%- include('./partials/header.ejs') %>

        <div class="posts">
            <div class="image-box">
                <!-- divMain -->

                <div class="top">
                    <!-- divTop -->
                    <div class="author">
                        <img src="<%= posts.authorImage %>" alt="">
                        <div class='<h3 class="comment">'>
                            <%= posts.author %>
                        </div>
                    </div>
                    <div class="date">
                        <%= posts.date %>
                    </div>
                </div>

                <div class="image">
                    <!-- divImage -->
                    <div class="image">
                        <div class='img'> <img src="<%= posts.image %>" alt=""> </div>
                        <div class="comment">
                            <%= posts.body %>
                        </div>
                    </div>
                </div>

                <div class="bottom">
                    <div id="like">
                        <table>
                        <tr>
                            <td><button onclick="increaseLike()">Like</button></td>

                        <td><p id="counter-label">0</p>
                        
    <script src="/script.js"></script></td>
                        </tr>
                    </table>
                    </div>
                </div>

            </div>

            <a class="delete" data-del="<%= posts.id %>">Delete</a>
        </div>


        <%- include('./partials/footer.ejs') %>
</body>

</html>

<script>
    const delreq = document.querySelector('a.delete');
    delreq.addEventListener('click', (e) => {
        const endpoint = `/posts/${delreq.dataset.del}`;

        fetch(endpoint, {
            method: 'DELETE',
        }).then(window.location.href = '/')
    });
</script>

